{
  "adapters": {
    "lldb-vscode": {
      "variables": {
        "LLVM": {
          "shell": "brew --prefix llvm"
        }
      },

      "command": ["${LLVM}/bin/lldb-vscode"],

      "name": "lldb"
    },

    "vscode-cpptools": {
      "attach": {
        "pidProperty": "processId",
        "pidSelect": "ask"
      },
      "command": ["${gadgetDir}/vscode-cpptools/debugAdapters/OpenDebugAD7"],
      "name": "cppdbg"
    }
  },

  "configurations": {
    "lldb-vscode": {
      "adapter": "lldb-vscode",

      "configuration": {
        "name": "lldb-vscode",
        "type": "lldb",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "program": "${workspaceRoot}/test/main"
      },

      "breakpoints": {
        "exception": {
          "cpp_catch": "",
          "cpp_throw": "",
          "objc_catch": "",
          "objc_throw": "",
          "swift_catch": "",
          "swift_throw": ""
        }
      }
    },

    "vscode-cpptools": {
      "adapter": "vscode-cpptools",

      "configuration": {
        "name": "vscode-cpptools",
        "type": "cppdbg",
        "request": "launch",
        "MIMode": "lldb",
        "stopAtEntry": true,
        "cwd": "${workspaceRoot}",
        "program": "${workspaceRoot}/test/main"
      }
    }
  }
}
